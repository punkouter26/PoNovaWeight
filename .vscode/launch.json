{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Aspire",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/src/PoNovaWeight.AppHost/PoNovaWeight.AppHost.csproj",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bLogin to the dashboard at\\s+(https?://\\S+)",
        "uriFormat": "%s"
      }
    },
    {
      "name": "Launch API (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/PoNovaWeight.Api/bin/Debug/net10.0/PoNovaWeight.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/PoNovaWeight.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": ["Launch API (Debug)"]
    }
  ]
}
