@using Microsoft.AspNetCore.Components.Routing

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Shared.MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
                <Authorizing>
                    <div class="flex items-center justify-center min-h-screen">
                        <div class="text-gray-600">Loading...</div>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(Shared.MainLayout)">
                <div class="flex flex-col items-center justify-center min-h-[50vh] text-center">
                    <h1 class="text-2xl font-bold text-gray-800 mb-2">Page Not Found</h1>
                    <p class="text-gray-600 mb-4">Sorry, there's nothing at this address.</p>
                    <a href="/" class="text-healthy-primary hover:underline">Return to Dashboard</a>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
