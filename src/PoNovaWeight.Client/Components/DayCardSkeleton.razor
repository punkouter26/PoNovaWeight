@namespace PoNovaWeight.Client.Components

@* Skeleton loader for DayCard showing animated loading state *@
<div class="bg-white dark:bg-dark-card rounded-2xl shadow-elevation-2 border border-healthy-light dark:border-dark-border p-4 animate-pulse">
    <!-- Header skeleton -->
    <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-3">
            <div class="w-11 h-11 bg-gray-200 dark:bg-dark-border rounded-xl"></div>
            <div>
                <div class="h-4 w-10 bg-gray-200 dark:bg-dark-border rounded mb-1"></div>
                <div class="h-3 w-14 bg-gray-100 dark:bg-dark-bg rounded"></div>
            </div>
        </div>
        <div class="text-right">
            <div class="h-5 w-10 bg-gray-200 dark:bg-dark-border rounded mb-1"></div>
            <div class="h-3 w-12 bg-gray-100 dark:bg-dark-bg rounded"></div>
        </div>
    </div>

    <!-- Progress bars skeleton -->
    <div class="flex gap-1.5 mb-3">
        @for (var i = 0; i < 6; i++)
        {
            <div class="flex-1 h-2 bg-gray-200 dark:bg-dark-border rounded-full"></div>
        }
    </div>

    <!-- Mini stats skeleton -->
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
            @for (var i = 0; i < 3; i++)
            {
                <div class="flex items-center gap-1">
                    <div class="w-3.5 h-3.5 bg-gray-200 dark:bg-dark-border rounded"></div>
                    <div class="w-4 h-3 bg-gray-100 dark:bg-dark-bg rounded"></div>
                </div>
            }
        </div>
        <div class="flex items-center gap-1.5">
            <div class="w-4 h-4 bg-gray-200 dark:bg-dark-border rounded"></div>
            <div class="w-8 h-3 bg-gray-100 dark:bg-dark-bg rounded"></div>
        </div>
    </div>
</div>
