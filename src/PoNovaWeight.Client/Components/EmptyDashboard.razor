@namespace PoNovaWeight.Client.Components

<div class="empty-state">
    <!-- Illustration -->
    <div class="mb-6">
        <div class="w-32 h-32 lg:w-40 lg:h-40 rounded-full bg-gradient-to-br from-healthy-light to-healthy-bg flex items-center justify-center mx-auto">
            <svg class="w-16 h-16 lg:w-20 lg:h-20 text-healthy-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 3.03v.568c0 .334.148.65.405.864l1.068.89c.442.369.535 1.01.216 1.49l-.51.766a2.25 2.25 0 01-1.161.886l-.143.048a1.107 1.107 0 00-.57 1.664c.369.555.169 1.307-.427 1.605L9 13.125l.423 1.059a.956.956 0 01-1.652.928l-.679-.906a1.125 1.125 0 00-1.906.172L4.5 15.75l-.612.153M12.75 3.031a9 9 0 00-8.862 12.872M12.75 3.031a9 9 0 016.69 14.036m0 0l-.177-.529A2.25 2.25 0 0017.128 15H16.5l-.324-.324a1.453 1.453 0 00-2.328.377l-.036.073a1.586 1.586 0 01-.982.816l-.99.282c-.55.157-.894.702-.8 1.267l.073.438c.08.474.49.821.97.821.846 0 1.598.542 1.865 1.345l.215.643m5.276-3.67a9.012 9.012 0 01-5.276 3.67m0 0a9 9 0 01-10.275-4.835M15.75 9c0 .896-.393 1.7-1.016 2.25"/>
            </svg>
        </div>
    </div>

    <!-- Title & Description -->
    <h2 class="text-xl lg:text-2xl font-bold text-healthy-text dark:text-dark-text mb-2">
        Start Your Wellness Journey
    </h2>
    <p class="text-sm lg:text-base text-healthy-muted dark:text-dark-muted max-w-sm mb-8 leading-relaxed">
        Track your meals, build OMAD streaks, and watch your progress unfold. 
        Your first log is just a tap away!
    </p>

    <!-- Primary CTA -->
    <a href="/day/@DateOnly.FromDateTime(DateTime.Today).ToString("yyyy-MM-dd")"
       class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-healthy-primary to-healthy-secondary text-white rounded-xl font-medium hover:from-healthy-dark hover:to-healthy-primary transition-all shadow-healthy text-sm lg:text-base">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Log Your First Meal
    </a>

    <!-- Secondary Action -->
    <div class="flex items-center gap-3 mt-4">
        <button @onclick="() => OnRetry.InvokeAsync()" 
                class="text-sm text-healthy-muted hover:text-healthy-text dark:text-dark-muted dark:hover:text-dark-text transition-colors">
            Refresh data
        </button>
    </div>

    <!-- Feature Highlights -->
    <div class="mt-10 pt-8 border-t border-healthy-light dark:border-dark-border w-full max-w-md">
        <h3 class="text-xs font-medium text-healthy-muted dark:text-dark-muted uppercase tracking-wide mb-4 text-center">
            What you can track
        </h3>
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-3">
            <div class="flex flex-col items-center p-3 bg-healthy-bg dark:bg-dark-border rounded-xl">
                <div class="w-8 h-8 rounded-lg bg-healthy-primary/10 flex items-center justify-center mb-1">
                    <svg class="w-5 h-5 text-healthy-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8.25v-1.5m0 1.5c-1.355 0-2.697.056-4.024.166C6.845 8.51 6 9.473 6 10.608v2.513m6-4.87c1.355 0 2.697.055 4.024.165C17.155 8.51 18 9.473 18 10.608v2.513m-3-4.87v-1.5m-6 1.5v-1.5m12 9.75l-1.5.75a3.354 3.354 0 01-3 0 3.354 3.354 0 00-3 0 3.354 3.354 0 01-3 0 3.354 3.354 0 00-3 0 3.354 3.354 0 01-3 0L3 16.5m18-4.5a3 3 0 00-3-3h-2.25a3 3 0 00-3 3M21 12a3 3 0 00-3-3h-2.25a3 3 0 00-3 3m0 0V9a3 3 0 00-3-3H6.75a3 3 0 00-3 3v3"/></svg>
                </div>
                <span class="text-xs font-medium text-healthy-text dark:text-dark-text">Food Groups</span>
                <span class="text-[10px] text-healthy-muted dark:text-dark-muted">6 categories</span>
            </div>
            <div class="flex flex-col items-center p-3 bg-healthy-bg dark:bg-dark-border rounded-xl">
                <div class="w-8 h-8 rounded-lg bg-healthy-water/10 flex items-center justify-center mb-1">
                    <svg class="w-5 h-5 text-healthy-water" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3.75c2.227 2.466 5.25 6.293 5.25 9.75a5.25 5.25 0 11-10.5 0c0-3.457 3.023-7.284 5.25-9.75z"/></svg>
                </div>
                <span class="text-xs font-medium text-healthy-text dark:text-dark-text">Hydration</span>
                <span class="text-[10px] text-healthy-muted dark:text-dark-muted">8 glasses goal</span>
            </div>
            <div class="flex flex-col items-center p-3 bg-healthy-bg dark:bg-dark-border rounded-xl">
                <div class="w-8 h-8 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center mb-1">
                    <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v17.25m0 0c-1.472 0-2.882.265-4.185.75M12 20.25c1.472 0 2.882.265 4.185.75M18.75 4.97A48.416 48.416 0 0012 4.5c-2.291 0-4.545.16-6.75.47m13.5 0c1.01.143 2.01.317 3 .52m-3-.52l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.988 5.988 0 01-2.031.352 5.988 5.988 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L18.75 4.971zm-16.5.52c.99-.203 1.99-.377 3-.52m0 0l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.989 5.989 0 01-2.031.352 5.989 5.989 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L5.25 4.971z"/></svg>
                </div>
                <span class="text-xs font-medium text-healthy-text dark:text-dark-text">Weight</span>
                <span class="text-[10px] text-healthy-muted dark:text-dark-muted">Trend analysis</span>
            </div>
            <div class="flex flex-col items-center p-3 bg-healthy-bg dark:bg-dark-border rounded-xl">
                <div class="w-8 h-8 rounded-lg bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center mb-1">
                    <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z"/></svg>
                </div>
                <span class="text-xs font-medium text-healthy-text dark:text-dark-text">Streaks</span>
                <span class="text-[10px] text-healthy-muted dark:text-dark-muted">OMAD tracking</span>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnRetry { get; set; }
}
