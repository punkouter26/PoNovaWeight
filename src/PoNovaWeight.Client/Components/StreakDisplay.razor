@using PoNovaWeight.Shared.DTOs

<div class="bg-gradient-to-br from-healthy-primary to-healthy-dark rounded-2xl shadow-elevation-3 p-5 text-white">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="w-16 h-16 rounded-2xl bg-white/20 backdrop-blur flex items-center justify-center">
                @if (Streak?.CurrentStreak > 0)
                {
                    <svg class="w-8 h-8 text-amber-300" fill="currentColor" viewBox="0 0 24 24"><path d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z"/></svg>
                }
                else
                {
                    <svg class="w-8 h-8 text-emerald-300" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18"/></svg>
                }
            </div>
            <div>
                <div class="text-4xl lg:text-5xl font-bold tracking-tight">@(Streak?.CurrentStreak ?? 0)</div>
                <div class="text-sm text-white/80 font-medium">Day OMAD Streak</div>
            </div>
        </div>
        
        @if (Streak?.StreakStartDate.HasValue == true && Streak.CurrentStreak > 0)
        {
            <div class="text-right">
                <div class="text-xs text-white/60 uppercase tracking-wide">Started</div>
                <div class="text-lg font-semibold">
                    @Streak.StreakStartDate.Value.ToString("MMM d")
                </div>
            </div>
        }
    </div>

    @if (Streak?.CurrentStreak > 0)
    {
        <div class="mt-4 pt-4 border-t border-white/20">
            <div class="flex items-center gap-2 flex-wrap">
                @for (int i = 0; i < Math.Min(Streak.CurrentStreak, 7); i++)
                {
                    <div class="w-10 h-10 lg:w-11 lg:h-11 rounded-xl bg-white/20 backdrop-blur flex items-center justify-center shadow-sm">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"/></svg>
                    </div>
                }
                @if (Streak.CurrentStreak > 7)
                {
                    <div class="text-sm text-white/80 font-medium bg-white/10 px-3 py-2 rounded-xl">
                        +@(Streak.CurrentStreak - 7) more
                    </div>
                }
            </div>
            @if (Streak.CurrentStreak >= 7)
            {
                <div class="mt-3 text-sm text-white/90 font-medium flex items-center gap-2">
                    <svg class="w-5 h-5 text-amber-300" fill="currentColor" viewBox="0 0 24 24"><path d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/></svg>
                    Amazing! You've maintained OMAD for a full week!
                </div>
            }
        </div>
    }
    else
    {
        <!-- Enhanced Empty State -->
        <div class="mt-4 pt-4 border-t border-white/20">
            <div class="flex items-center gap-4 p-4 bg-white/10 backdrop-blur rounded-xl">
                <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"/></svg>
                </div>
                <div>
                    <p class="text-base font-semibold text-white">Start your streak today!</p>
                    <p class="text-sm text-white/70">Mark today as OMAD to begin building momentum</p>
                </div>
            </div>
            <a href="/day/@DateOnly.FromDateTime(DateTime.Today).ToString("yyyy-MM-dd")"
               class="mt-4 flex items-center justify-center gap-2 py-3 px-4 bg-white/20 hover:bg-white/30 rounded-xl text-sm font-semibold text-white transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"/></svg>
                Log today's meal
            </a>
        </div>
    }
</div>

@code {
    [Parameter]
    public StreakDto? Streak { get; set; }
}
