@using PoNovaWeight.Shared.Contracts

<div class="flex items-center justify-between p-4 bg-healthy-card rounded-2xl shadow-elevation-2 border @(IsOverTarget ? "border-healthy-danger/30" : "border-healthy-light") dark:bg-dark-card dark:border-dark-border transition-shadow hover:shadow-elevation-3">
    <div class="flex-1">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl flex items-center justify-center @GetCategoryBgClass()">
                @((MarkupString)GetCategoryIcon())
            </div>
            <div>
                <div class="flex items-center gap-2">
                    <span class="text-base font-semibold text-healthy-text dark:text-dark-text">@CategoryName</span>
                    @if (IsOverTarget)
                    {
                        <span class="text-xs px-2 py-0.5 bg-healthy-danger/10 text-healthy-danger rounded-full font-medium">Over</span>
                    }
                    else if (Current >= Target)
                    {
                        <span class="w-5 h-5 rounded-full bg-healthy-primary flex items-center justify-center">
                            <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"/></svg>
                        </span>
                    }
                </div>
                <div class="text-sm text-healthy-muted dark:text-dark-muted">
                    @Current / @Target @(UnitCategoryInfo.IsMaxLimit(Category) ? "max" : "target")
                </div>
            </div>
        </div>
    </div>

    <div class="flex items-center gap-3">
        <button @onclick="Decrement" 
                disabled="@(Current <= 0)"
                class="w-11 h-11 rounded-full flex items-center justify-center text-lg font-bold border border-gray-200 bg-gray-50 text-gray-600 hover:bg-gray-100 active:scale-95 transition-all shadow-btn hover:shadow-btn-hover disabled:opacity-40 disabled:cursor-not-allowed dark:bg-dark-card dark:border-dark-border dark:text-dark-muted"
                aria-label="Decrease @CategoryName">
            âˆ’
        </button>
        
        <span class="w-10 text-center text-xl font-bold tabular-nums @(IsOverTarget ? "text-healthy-danger" : Current >= Target ? "text-healthy-primary" : "text-healthy-text dark:text-dark-text")">
            @Current
        </span>
        
        <button @onclick="Increment" 
                disabled="@(Current >= MaxUnits)"
                class="w-11 h-11 rounded-full flex items-center justify-center text-lg font-bold bg-healthy-primary text-white hover:bg-healthy-dark active:scale-95 transition-all shadow-btn hover:shadow-btn-hover disabled:opacity-40 disabled:cursor-not-allowed"
                aria-label="Increase @CategoryName">
            +
        </button>
    </div>
</div>

<!-- Progress bar with better height for visibility -->
<div class="h-2 mt-2 rounded-full bg-gray-100 dark:bg-dark-border overflow-hidden">
    <div class="h-full rounded-full transition-all duration-300 @ProgressColorClass" style="width: @ProgressPercent%"></div>
</div>

@code {
    [Parameter, EditorRequired]
    public UnitCategory Category { get; set; }

    [Parameter]
    public int Current { get; set; }

    [Parameter]
    public EventCallback<int> OnValueChanged { get; set; }

    private const int MaxUnits = 100;
    private string CategoryName => Category.ToString();
    private int Target => UnitCategoryInfo.GetDailyTarget(Category);
    private bool IsOverTarget => Current > Target;
    
    private int ProgressPercent => Target > 0 ? Math.Min(100, (int)((double)Current / Target * 100)) : 0;
    
    private string ProgressColorClass => IsOverTarget 
        ? "bg-healthy-danger" 
        : Current >= Target 
            ? "bg-healthy-primary" 
            : "bg-healthy-warning";

    private string GetCategoryBgClass() => Category switch
    {
        UnitCategory.Proteins => "bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400",
        UnitCategory.Vegetables => "bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400",
        UnitCategory.Fruits => "bg-rose-100 text-rose-600 dark:bg-rose-900/30 dark:text-rose-400",
        UnitCategory.Starches => "bg-orange-100 text-orange-700 dark:bg-orange-900/30 dark:text-orange-400",
        UnitCategory.Fats => "bg-yellow-100 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400",
        UnitCategory.Dairy => "bg-sky-100 text-sky-700 dark:bg-sky-900/30 dark:text-sky-400",
        _ => "bg-gray-100 text-gray-600"
    };

