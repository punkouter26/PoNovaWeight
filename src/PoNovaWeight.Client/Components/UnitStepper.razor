        _ => """<svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75z"/></svg>"""
    };

    private async Task Increment()
    {
        await OnValueChanged.InvokeAsync(1);
    }

    private async Task Decrement()
    {
        if (Current > 0)
        {
            await OnValueChanged.InvokeAsync(-1);
        }
    }
}
