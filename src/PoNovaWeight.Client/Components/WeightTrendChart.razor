@namespace PoNovaWeight.Client.Components

<div class="weight-trend-chart bg-healthy-card rounded-xl shadow-healthy border border-healthy-light p-4">
    <h3 class="text-sm font-semibold mb-4 text-healthy-text flex items-center gap-2">
        <span>üìà</span>
        Weight Trends
        @if (TotalDaysLogged > 0)
        {
            <span class="text-xs font-normal text-healthy-muted ml-auto">
                @TotalDaysLogged days logged
            </span>
        }
    </h3>

    @if (!HasData)
    {
        <!-- Enhanced Empty State -->
        <div class="flex flex-col items-center justify-center py-8 px-4">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-healthy-light to-healthy-bg flex items-center justify-center mb-4">
                <span class="text-3xl">‚öñÔ∏è</span>
            </div>
            <h4 class="text-sm font-semibold text-healthy-text mb-1">No weight data yet</h4>
            <p class="text-xs text-healthy-muted text-center max-w-xs mb-4">
                Track your weight to see trends over time and correlate with your eating habits.
            </p>
            <a href="/day/@DateOnly.FromDateTime(DateTime.Today).ToString("yyyy-MM-dd")"
               class="inline-flex items-center gap-1 text-xs font-medium text-healthy-primary hover:text-healthy-dark transition-colors">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Log your first weight
            </a>
        </div>
    }
    else
    {
        <!-- Weight Change Summary -->
        <div class="flex items-center justify-between mb-4 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div class="text-sm text-gray-600 dark:text-gray-300">
                <span class="font-medium">Period Change:</span>
            </div>
            <div class="flex items-center gap-2">
                @if (WeightChange.HasValue)
                {
                    <span class="text-lg font-bold @(WeightChange > 0 ? "text-healthy-fruit" : WeightChange < 0 ? "text-healthy-primary" : "text-healthy-muted")">
                        @(WeightChange > 0 ? "+" : "")@WeightChange.Value.ToString("F1") lbs
                    </span>
                    @if (WeightChange > 0)
                    {
                        <svg class="w-5 h-5 text-healthy-fruit" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                    }
                    else if (WeightChange < 0)
                    {
                        <svg class="w-5 h-5 text-healthy-primary" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                    }
                }
                else
                {
                    <span class="text-healthy-muted">--</span>
                }
            </div>
        </div>

        <!-- Simple Chart Visualization -->
        <div class="relative h-40 lg:h-48 mb-4">
            @if (DataPoints.Any(p => p.Weight.HasValue))
            {
                <div class="flex items-end justify-between h-full gap-0.5">
                    @foreach (var point in DataPoints)
                    {
                        <div class="flex-1 flex flex-col items-center justify-end h-full group relative">
                            @if (point.Weight.HasValue)
                            {
                                var height = CalculateBarHeight(point.Weight.Value);
                                var tooltipText = $"{point.Date:MMM d}: {point.Weight.Value:F1} lbs{(point.IsCarryForward ? " (carry-forward)" : "")}{(point.AlcoholConsumed == true ? " üç∫" : "")}";
                                <div class="w-full rounded-t transition-all duration-200 hover:opacity-80 @GetBarColorClass(point)"
                                     style="height: @height%"
                                     title="@tooltipText">
                                </div>
                                
                                <!-- Tooltip on hover -->
                                <div class="absolute bottom-full mb-2 hidden group-hover:block z-10">
                                    <div class="bg-healthy-text text-white text-xs rounded-lg py-2 px-3 whitespace-nowrap shadow-lg">
                                        <div class="font-medium">@point.Date.ToString("MMM d, yyyy")</div>
                                        <div>@point.Weight.Value.ToString("F1") lbs</div>
                                        @if (point.IsCarryForward)
                                        {
                                            <div class="text-gray-300 text-[10px]">(carry-forward)</div>
                                        }
                                        @if (point.AlcoholConsumed == true)
                                        {
                                            <div class="text-[10px]">üç∫ Alcohol</div>
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="w-full h-1 bg-healthy-light rounded"></div>
                            }
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Legend -->
        <div class="flex flex-wrap justify-center gap-4 text-[10px] text-healthy-muted">
            <div class="flex items-center gap-1">
                <div class="w-2.5 h-2.5 bg-healthy-primary rounded"></div>
                <span>Logged</span>
            </div>
            <div class="flex items-center gap-1">
                <div class="w-2.5 h-2.5 bg-healthy-secondary rounded"></div>
                <span>Carry-forward</span>
            </div>
            <div class="flex items-center gap-1">
                <div class="w-2.5 h-2.5 bg-healthy-grain rounded"></div>
                <span>üç∫ Alcohol day</span>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public List<TrendDataPoint> DataPoints { get; set; } = new();

    [Parameter]
    public int TotalDaysLogged { get; set; }

    [Parameter]
    public decimal? WeightChange { get; set; }

    private bool HasData => DataPoints.Any(p => p.Weight.HasValue);

    private decimal MinWeight => DataPoints.Where(p => p.Weight.HasValue).Min(p => p.Weight!.Value);
    private decimal MaxWeight => DataPoints.Where(p => p.Weight.HasValue).Max(p => p.Weight!.Value);

    private double CalculateBarHeight(decimal weight)
    {
        if (!HasData) return 0;

        var range = MaxWeight - MinWeight;
        if (range == 0) return 50; // All same weight

        // Scale between 20% and 100% height
        var normalized = (double)((weight - MinWeight) / range);
        return 20 + (normalized * 80);
    }

    private string GetBarColorClass(TrendDataPoint point)
    {
        if (point.AlcoholConsumed == true)
        {
            return "bg-healthy-grain";
        }

        return point.IsCarryForward ? "bg-healthy-secondary" : "bg-healthy-primary";
    }

    /// <summary>
    /// Trend data point for the chart.
    /// </summary>
    public class TrendDataPoint
    {
        public DateOnly Date { get; set; }
        public decimal? Weight { get; set; }
        public bool IsCarryForward { get; set; }
        public bool? AlcoholConsumed { get; set; }
    }
}
