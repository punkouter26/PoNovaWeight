@page "/login"
@layout EmptyLayout
@inject NavigationManager Navigation
@inject HttpClient Http
@inject AuthService AuthService

<PageTitle>Sign In - PoNovaWeight</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-healthy-primary/10 via-healthy-bg to-healthy-secondary/10 dark:from-dark-bg dark:via-dark-card dark:to-dark-bg py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Brand Header -->
        <div class="text-center">
            <div class="w-20 h-20 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-healthy-primary to-healthy-dark flex items-center justify-center shadow-elevation-3">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18"/></svg>
            </div>
            <h1 class="text-3xl font-bold text-healthy-text dark:text-dark-text">
                PoNovaWeight
            </h1>
            <p class="mt-2 text-sm text-healthy-muted dark:text-dark-muted">
                Your personal OMAD food journal
            </p>
        </div>

        <div class="mt-8 space-y-6">
            <div class="bg-white dark:bg-dark-card rounded-2xl shadow-elevation-3 p-8 border border-healthy-light dark:border-dark-border">
                <div class="text-center mb-6">
                    <h2 class="text-xl font-semibold text-healthy-text dark:text-dark-text">Welcome back</h2>
                    <p class="mt-1 text-sm text-healthy-muted dark:text-dark-muted">Sign in to track your progress</p>
                </div>

                <a href="@GetLoginUrl()" 
                   class="w-full flex justify-center items-center gap-3 py-3 px-4 border border-gray-200 dark:border-dark-border rounded-xl shadow-sm bg-white dark:bg-dark-border text-sm font-medium text-gray-700 dark:text-dark-text hover:bg-gray-50 dark:hover:bg-dark-bg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-healthy-primary transition-all duration-200 hover:shadow-elevation-2">
                    <svg class="h-5 w-5" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Sign in with Google
                </a>

                @if (ShowDevLogin)
                {
                    <div class="mt-6 pt-6 border-t border-gray-200 dark:border-dark-border">
                        <div class="flex items-center justify-center gap-2 mb-4">
                            <div class="w-6 h-6 rounded-lg bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                                <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z"/></svg>
                            </div>
                            <p class="text-xs text-amber-700 dark:text-amber-400 font-semibold">Development Mode</p>
                        </div>
                        <div class="space-y-3">
                            <input type="email" 
                                   @bind="DevEmail" 
                                   placeholder="dev-user@local"
                                   class="w-full px-4 py-3 border border-gray-200 dark:border-dark-border rounded-xl text-sm bg-white dark:bg-dark-bg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 dark:text-dark-text" />
                            <button @onclick="DevLoginAsync"
                                    disabled="@IsLoading"
                                    class="w-full flex justify-center items-center gap-2 py-3 px-4 border border-amber-300 dark:border-amber-700 rounded-xl shadow-sm bg-amber-50 dark:bg-amber-900/30 text-sm font-medium text-amber-700 dark:text-amber-300 hover:bg-amber-100 dark:hover:bg-amber-900/50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                                @if (IsLoading)
                                {
                                    <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                    <span>Signing in...</span>
                                }
                                else
                                {
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <span>Dev Login (bypass OAuth)</span>
                                }
                            </button>
                        </div>
                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <p class="mt-2 text-center text-xs text-red-600 dark:text-red-400">@ErrorMessage</p>
                        }
                    </div>
                }
            </div>

            <p class="text-center text-xs text-healthy-muted dark:text-dark-muted">
                By signing in, you agree to our terms of service and privacy policy.
            </p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    private string DevEmail { get; set; } = "dev-user@local";
    private bool IsLoading { get; set; }
    private string? ErrorMessage { get; set; }
    private bool ShowDevLogin { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Check if dev-login endpoint exists (only available in Development)
        try
        {
            // Try to access the dev-login endpoint with OPTIONS or just detect via a simple check
            // For now, we'll show dev login if the host is localhost
            var uri = new Uri(Navigation.BaseUri);
            ShowDevLogin = uri.Host is "localhost" or "127.0.0.1";
        }
        catch
        {
            ShowDevLogin = false;
        }
    }

    private string GetLoginUrl()
    {
        var returnUrl = string.IsNullOrEmpty(ReturnUrl) ? "/" : ReturnUrl;
        return Services.AuthService.GetLoginUrl(returnUrl);
    }

    private async Task DevLoginAsync()
    {
        IsLoading = true;
        ErrorMessage = null;

        try
        {
            var email = string.IsNullOrWhiteSpace(DevEmail) ? "dev-user@local" : DevEmail;
            var response = await Http.PostAsync($"/api/auth/dev-login?email={Uri.EscapeDataString(email)}", null);

            if (response.IsSuccessStatusCode)
            {
                // Refresh auth state and navigate
                await AuthService.RefreshAuthStateAsync();
                var returnUrl = string.IsNullOrEmpty(ReturnUrl) ? "/" : ReturnUrl;
                Navigation.NavigateTo(returnUrl, forceLoad: true);
            }
            else
            {
                var content = await response.Content.ReadAsStringAsync();
                ErrorMessage = $"Login failed: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }
}
        }
    }
}
