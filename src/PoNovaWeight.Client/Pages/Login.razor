@page "/login"
@layout EmptyLayout
@inject NavigationManager Navigation
@inject HttpClient Http
@inject AuthService AuthService

<PageTitle>Sign In - NovaWeight</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold text-gray-900">
                NovaWeight
            </h1>
            <p class="mt-2 text-center text-sm text-gray-600">
                Your personal food journal
            </p>
        </div>

        <div class="mt-8 space-y-6">
            <div class="rounded-md bg-white shadow-sm p-8">
                <div class="text-center mb-6">
                    <h2 class="text-xl font-semibold text-gray-900">Sign in to continue</h2>
                    <p class="mt-1 text-sm text-gray-500">Use your Google account to get started</p>
                </div>

                <a href="@GetLoginUrl()" 
                   class="w-full flex justify-center items-center gap-3 py-3 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-healthy-primary">
                    <svg class="h-5 w-5" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Sign in with Google
                </a>

                @if (ShowDevLogin)
                {
                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <p class="text-center text-xs text-orange-600 font-medium mb-3">
                            üõ†Ô∏è Development Mode
                        </p>
                        <div class="space-y-3">
                            <input type="email" 
                                   @bind="DevEmail" 
                                   placeholder="dev-user@local"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
                            <button @onclick="DevLoginAsync"
                                    disabled="@IsLoading"
                                    class="w-full flex justify-center items-center gap-2 py-2 px-4 border border-orange-300 rounded-lg shadow-sm bg-orange-50 text-sm font-medium text-orange-700 hover:bg-orange-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 disabled:opacity-50 disabled:cursor-not-allowed">
                                @if (IsLoading)
                                {
                                    <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                    <span>Signing in...</span>
                                }
                                else
                                {
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <span>Dev Login (bypass OAuth)</span>
                                }
                            </button>
                        </div>
                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <p class="mt-2 text-center text-xs text-red-600">@ErrorMessage</p>
                        }
                    </div>
                }
            </div>

            <p class="text-center text-xs text-gray-500">
                By signing in, you agree to our terms of service and privacy policy.
            </p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    private string DevEmail { get; set; } = "dev-user@local";
    private bool IsLoading { get; set; }
    private string? ErrorMessage { get; set; }
    private bool ShowDevLogin { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Check if dev-login endpoint exists (only available in Development)
        try
        {
            // Try to access the dev-login endpoint with OPTIONS or just detect via a simple check
            // For now, we'll show dev login if the host is localhost
            var uri = new Uri(Navigation.BaseUri);
            ShowDevLogin = uri.Host is "localhost" or "127.0.0.1";
        }
        catch
        {
            ShowDevLogin = false;
        }
    }

    private string GetLoginUrl()
    {
        var returnUrl = string.IsNullOrEmpty(ReturnUrl) ? "/" : ReturnUrl;
        return Services.AuthService.GetLoginUrl(returnUrl);
    }

    private async Task DevLoginAsync()
    {
        IsLoading = true;
        ErrorMessage = null;

        try
        {
            var email = string.IsNullOrWhiteSpace(DevEmail) ? "dev-user@local" : DevEmail;
            var response = await Http.PostAsync($"/api/auth/dev-login?email={Uri.EscapeDataString(email)}", null);

            if (response.IsSuccessStatusCode)
            {
                // Refresh auth state and navigate
                await AuthService.RefreshAuthStateAsync();
                var returnUrl = string.IsNullOrEmpty(ReturnUrl) ? "/" : ReturnUrl;
                Navigation.NavigateTo(returnUrl, forceLoad: true);
            }
            else
            {
                var content = await response.Content.ReadAsStringAsync();
                ErrorMessage = $"Login failed: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }
}
        }
    }
}
